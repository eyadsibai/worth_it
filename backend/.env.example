# API Configuration
API_BASE_URL=http://localhost:8000
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration
STREAMLIT_PORT=8501

# CORS Configuration (comma-separated list of allowed origins)
# For development, leave empty to use defaults (localhost:3000, localhost:8501)
# For production/Vercel, set to your actual domains:
# CORS_ORIGINS=https://worth-it.vercel.app,https://worth-it-*.vercel.app,https://your-domain.com
CORS_ORIGINS=

# Environment
ENVIRONMENT=development  # Options: development, production, testing

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Monte Carlo Simulation Limits
MAX_SIMULATIONS=10000

# API Rate Limiting (optional - for production)
# RATE_LIMIT_ENABLED=false
# RATE_LIMIT_PER_MINUTE=60
